{
    "name": "kyletaylored/pantheon-secrets-manager",
    "description": "Pantheon Secrets Manager WordPress Plugin",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-or-later",
    "authors": [
        {
            "name": "Kyle Taylor",
            "email": "kyletaylored@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "pantheon-systems/customer-secrets-php-sdk": "^1.0"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "brainmaestro/composer-git-hooks": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "PantheonSecretsManager\\": "src/"
        }
    },
    "extra": {
        "hooks": {
            "pre-commit": [
                "vendor/bin/phpcs",
                "vendor/bin/phpunit"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@php -r \"if (file_exists('vendor/bin/cghooks')) { echo shell_exec('vendor/bin/cghooks add --ignore-lock'); echo shell_exec('vendor/bin/cghooks update'); }\""
        ],
        "post-update-cmd": [
            "@php -r \"if (file_exists('vendor/bin/cghooks')) { echo shell_exec('vendor/bin/cghooks update'); }\""
        ],
        "cghooks": "vendor/bin/cghooks",
        "test": "vendor/bin/phpunit",
        "lint": "vendor/bin/phpcs",
        "fix": "vendor/bin/phpcbf"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}