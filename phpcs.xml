<?xml version="1.0"?>
<ruleset name="Pantheon Secrets Manager">
	<description>PHPCS ruleset for Pantheon Secrets Manager.</description>

	<file>.</file>

	<exclude-pattern>*/vendor/*</exclude-pattern>
	<exclude-pattern>*/node_modules/*</exclude-pattern>

	<arg name="basepath" value="."/>
	<arg name="colors"/>
	<arg name="parallel" value="75"/>
	<arg value="np"/>

	<rule ref="WordPress">
		<exclude name="WordPress.NamingConventions.PrefixAllGlobals"/>
	</rule>

	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="pantheon-secrets-manager"/>
		</properties>
	</rule>

	<config name="testVersion" value="8.2-"/>
</ruleset>
